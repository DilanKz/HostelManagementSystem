               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btnForgetPassword" layoutX="185.0" layoutY="485.0" onAction="#btnChangePassOnAction" text="Change Password" textFill="#ff5151" underline="true" />
         </children></Pane>
   </children>
